<?xml version="1.0" encoding="utf-8"?>
<com.lyl.wanandroid.widget.NestedLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lyl.wanandroid.widget.SlideShowView
        android:id="@+id/slideshowView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true">

    </com.lyl.wanandroid.widget.SlideShowView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/slideshowView"
        android:layout_weight="1"></androidx.recyclerview.widget.RecyclerView>

</com.lyl.wanandroid.widget.NestedLayout>